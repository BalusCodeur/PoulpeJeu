<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    android:scaleType="centerCrop"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/poulpejeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp"/>
        <Button
            android:id="@+id/shoutButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ShoutGame"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poulpejeu"/>
        <Button
            android:id="@+id/quizzButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoutButton"
            android:layout_gravity="center_horizontal"
            android:text="Quizz"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/shoutButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/soleilButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizzButton"
            android:layout_gravity="center_horizontal"
            android:text="123-Soleil"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/quizzButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/biscuitButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/soleilButton"
            android:layout_gravity="center_horizontal"
            android:text="BiscuitGame"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/soleilButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bridgeButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/biscuitButton"
            android:layout_gravity="center_horizontal"
            android:text="BridgeGame"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/biscuitButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/ropeButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bridgeButton"
            android:layout_gravity="center_horizontal"
            android:text="RopeGame"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bridgeButton" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>